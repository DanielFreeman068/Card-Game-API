<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Texas Hold'em</title>
    <link rel="stylesheet" href="/public/styles.css">
</head>
<body>
    <h1>Texas Hold'em</h1>

    <h2>Stage: <%= gameData.stage %></h2>

    <% if (gameData.stage === 'pre-flop') { %>
        <h3>Your Cards:</h3>
        <ul>
            <% gameData.player1Cards.forEach(card => { %>
                <li><img src="<%= card.image %>" alt="<%= card.value %> of <%= card.suit %>"></li>
            <% }) %>
        </ul>
        <form action="/texas-holdem/<%= gameData.deckId %>/flop" method="POST">
            <button type="submit" name="playerMove" value="check">Check</button>
            <button type="submit" name="playerMove" value="raise">Raise</button>
            <button type="submit" name="playerMove" value="fold">Fold</button>
        </form>
    <% } else if (gameData.stage === 'flop') { %>
        <h3>Community Cards:</h3>
        <ul>
            <% gameData.communityCards.forEach(card => { %>
                <li><img src="<%= card.image %>" alt="<%= card.value %> of <%= card.suit %>"></li>
            <% }) %>
        </ul>
        <form action="/texas-holdem/<%= gameData.deckId %>/flop" method="POST">
            <button type="submit" name="playerMove" value="check">Check</button>
            <button type="submit" name="playerMove" value="raise">Raise</button>
            <button type="submit" name="playerMove" value="fold">Fold</button>
        </form>
    <% } else if (gameData.stage === 'showdown') { %>
        <h2>Winner: <%= gameData.winner %></h2>
    <% } else { %>
        <h3>Game Over</h3>
    <% } %>

    <a href="/texas-holdem/start">Start a New Game</a>
</body>
</html>
